# Dockerfile for the WORKER service - BUILD ID: worker-v2
FROM node:20-alpine
RUN echo "=== Building WORKER service using Dockerfile.worker ==="

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy application code
COPY . .

# Run the worker
CMD ["npm", "run", "start:worker"]
