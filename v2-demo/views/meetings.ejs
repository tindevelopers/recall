<%- include('partials/header') -%>
<div class="min-h-full">
  <%- include('partials/navigation', { user: user, currentPage: 'meetings' }) -%>
  <%- include('partials/notice', { notice: notice }) -%>
  <div class="py-10">
    <header>
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="md:flex md:items-center md:justify-between">
          <div class="min-w-0 flex-1">
            <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900">
              Meetings
            </h1>
            <p class="mt-1 text-sm text-gray-500">
              View recordings, transcripts, and AI-generated notes from your meetings.
            </p>
          </div>
        </div>
      </div>
    </header>
    <main>
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-8">
        <% if (meetings.length === 0) { %>
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-semibold text-gray-900">No meetings yet</h3>
            <p class="mt-1 text-sm text-gray-500">
              <% if (hasCalendars) { %>
                Your calendar is connected! Meetings will appear here once your bot has attended and recorded them.
              <% } else { %>
                Meetings will appear here once your bot has attended and recorded them. Connect your calendar to get started.
              <% } %>
            </p>
            <% if (!hasCalendars) { %>
              <div class="mt-6">
                <a href="/" class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500">
                  <svg class="-ml-0.5 mr-1.5 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                  Connect a Calendar
                </a>
              </div>
            <% } else { %>
              <div class="mt-6">
                <a href="/" class="inline-flex items-center rounded-md bg-gray-100 px-3 py-2 text-sm font-semibold text-gray-700 shadow-sm hover:bg-gray-200">
                  View Connected Calendars
                </a>
              </div>
            <% } %>
          </div>
        <% } else { %>
          <div class="overflow-hidden bg-white shadow sm:rounded-lg">
            <ul role="list" class="divide-y divide-gray-200">
              <% meetings.forEach(function(meeting) { %>
                <li>
                  <a href="/meetings/<%= meeting.id %>" class="block hover:bg-gray-50">
                    <div class="px-4 py-4 sm:px-6">
                      <div class="flex items-center justify-between">
                        <div class="flex items-center min-w-0 flex-1">
                          <div class="flex-shrink-0">
                            <% if (meeting.platform === 'google_calendar') { %>
                              <img class="h-10 w-10 rounded-full" src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a5/Google_Calendar_icon_%282020%29.svg/2048px-Google_Calendar_icon_%282020%29.svg.png" alt="Google Calendar" />
                            <% } else if (meeting.platform === 'microsoft_outlook') { %>
                              <img class="h-10 w-10 rounded-full" src="https://img.icons8.com/color/480/outlook-calendar.png" alt="Microsoft Outlook" />
                            <% } else { %>
                              <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
                                <svg class="h-6 w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                </svg>
                              </div>
                            <% } %>
                          </div>
                          <div class="ml-4 min-w-0 flex-1">
                            <p class="truncate text-sm font-medium text-indigo-600">
                              <%= meeting.title %>
                            </p>
                            <div class="mt-1 flex items-center text-sm text-gray-500">
                              <svg class="mr-1.5 h-4 w-4 flex-shrink-0 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                              </svg>
                              <% if (meeting.startTime) { %>
                                <%= new Date(meeting.startTime).toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' }) %>
                                at
                                <%= new Date(meeting.startTime).toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' }) %>
                              <% } else { %>
                                Date unknown
                              <% } %>
                            </div>
                            <% if (meeting.calendarEmail) { %>
                              <p class="mt-1 text-xs text-gray-400">
                                <%= meeting.calendarEmail %>
                              </p>
                            <% } %>
                          </div>
                        </div>
                        <div class="ml-4 flex flex-shrink-0 items-center space-x-2">
                          <!-- Status badges -->
                          <% if (meeting.hasRecording) { %>
                            <span class="inline-flex items-center rounded-full bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">
                              <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"></path>
                              </svg>
                              Recording
                            </span>
                          <% } %>
                          <% if (meeting.hasTranscript) { %>
                            <span class="inline-flex items-center rounded-full bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-600/20">
                              <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"></path>
                              </svg>
                              Transcript
                            </span>
                          <% } %>
                          <% if (meeting.hasSummary) { %>
                            <span class="inline-flex items-center rounded-full bg-purple-50 px-2 py-1 text-xs font-medium text-purple-700 ring-1 ring-inset ring-purple-600/20">
                              <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z"></path>
                              </svg>
                              AI Notes
                            </span>
                          <% } %>
                          <!-- Arrow -->
                          <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                          </svg>
                        </div>
                      </div>
                      <% if (meeting.participants && meeting.participants.length > 0) { %>
                        <div class="mt-2 ml-14">
                          <div class="flex items-center text-xs text-gray-500">
                            <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                            </svg>
                            <%= meeting.participants.length %> participant<%= meeting.participants.length !== 1 ? 's' : '' %>
                          </div>
                        </div>
                      <% } %>
                    </div>
                  </a>
                </li>
              <% }); %>
            </ul>
          </div>
        <% } %>
      </div>
    </main>
  </div>
</div>
<%- include('partials/footer') -%>

