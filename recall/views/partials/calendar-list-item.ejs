<li class="relative flex justify-between gap-x-6 py-5 px-5 rounded-md hover:bg-gray-50">
  <div class="flex gap-x-4">
    <% if (calendar.platform === 'google_calendar') { %>
      <img class="h-8 w-8 flex-none rounded-full bg-gray-50" src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a5/Google_Calendar_icon_%282020%29.svg/2048px-Google_Calendar_icon_%282020%29.svg.png" alt="">
    <% } else { %>
      <img class="h-8 w-8 flex-none rounded-full bg-gray-50" src="https://img.icons8.com/color/480/outlook-calendar.png" alt="">
    <% } %>
    <div class="min-w-0 flex-auto">
      <p class="text-sm font-semibold leading-6 text-gray-900">
        <a href="/calendar/<%= calendar.id %>">
          <span class="absolute inset-x-0 -top-px bottom-0"></span>
          <%= calendar.email %>
        </a>
      </p>
      <p class="mt-1 flex text-xs leading-5 text-gray-500">
        <a href="/calendar/<%= calendar.id %>" class="relative truncate hover:underline">(Recall ID: <i><%= calendar.recallId %></i>)</a>
      </p>
    </div>
  </div>
  <div class="flex items-center gap-x-4">
    <div class="hidden sm:flex sm:flex-col sm:items-end">
      <p class="text-sm leading-6 text-gray-900">
        <%- include('calendar-status-badge', {status: calendar.status}); %>
      </p>              
      <p class="mt-1 text-xs leading-5 text-gray-500">Last updated <%- include('formatted-datetime', {time: calendar.updatedAt}); %></p>
      <div class="flex items-center mt-3">
        <a href="/calendar/<%= calendar.id %>" class="relative inline-flex items-center rounded-sm bg-white px-2 py-1 text-xs font-medium text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
          <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          Settings
        </a>
        <% if (calendar.recallId && calendar.status !== 'disconnected') { %>
          <form method="post" action="/calendar/<%= calendar.id %>/disconnect" class="inline">
            <button 
              type="submit" 
              class="relative inline-flex items-center rounded-sm bg-white px-2 py-1 text-xs font-medium text-orange-600 shadow-sm ring-1 ring-inset ring-orange-300 hover:bg-orange-50 ml-1" 
              title="Disconnect calendar"
              onclick="return confirm('Are you sure you want to disconnect this calendar? You can reconnect it later.')"
            >
              <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
              </svg>
              Disconnect
            </button>
          </form>
        <% } else if (calendar.status === 'disconnected') { %>
          <a href="<%= calendar.connectUrl %>" class="relative inline-flex items-center rounded-sm bg-indigo-600 px-3 py-1 text-xs font-medium text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 ml-1">Re-connect</a>
        <% } %>
        <form method="post" action="/calendar/<%= calendar.id %>">
          <input type="hidden" name="_method" value="DELETE" />
          <button class="relative rounded-sm bg-white px-2 py-1 text-xs font-medium text-red-600 shadow-sm ring-1 ring-inset ring-red-300 hover:bg-red-50 ml-1" type="submit">Delete</button>
        </form>
      </div>
    </div>
    <svg class="h-5 w-5 flex-none text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
      <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
    </svg>
  </div>
</li>