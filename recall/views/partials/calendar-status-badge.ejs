<% 
  const statusClass = status === 'connected' 
    ? 'text-green-600 bg-green-50 ring-green-500/10' 
    : status === 'disconnected' 
    ? 'text-red-600 bg-red-50 ring-red-500/10' 
    : status === 'connecting'
    ? 'text-yellow-600 bg-yellow-50 ring-yellow-500/10'
    : 'text-gray-600 bg-gray-50 ring-gray-500/10';
  const displayStatus = status === 'connected' ? 'Connected' : status === 'disconnected' ? 'Disconnected' : status || 'Unknown';
%>
<p class="rounded-md whitespace-nowrap mt-0.5 px-1.5 py-0.5 text-xs font-medium ring-1 ring-inset <%= statusClass %>">
  <%= displayStatus %>
</p>