<div id="actions-drawer" class="hidden fixed inset-0 z-40 lg:hidden" role="dialog" aria-modal="true" aria-labelledby="actions-drawer-title">
  <div class="fixed inset-0 bg-gray-900/50" onclick="closeActionsDrawer()"></div>
  <div id="actions-drawer-panel" class="fixed inset-y-0 right-0 w-full max-w-sm bg-white shadow-xl flex flex-col">
    <div class="flex items-center justify-between px-4 py-4 border-b border-gray-200">
      <h2 id="actions-drawer-title" class="text-base font-semibold text-gray-900">Quick Actions</h2>
      <button
        type="button"
        onclick="closeActionsDrawer()"
        class="rounded-md text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500"
      >
        <span class="sr-only">Close</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <div class="flex-1 overflow-y-auto px-4 py-5 space-y-4">
      <details class="group rounded-md border border-gray-200 p-3">
        <summary class="flex cursor-pointer items-center justify-between text-sm font-semibold text-gray-900">
          AI Summary
          <svg class="h-4 w-4 text-gray-400 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </summary>
        <div class="mt-3 space-y-2">
          <% if (meeting.artifactId && !meeting.hasBeenEnriched) { %>
            <button
              type="button"
              onclick="triggerEnrichment('<%= meeting.artifactId %>', this)"
              class="w-full inline-flex items-center justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500"
            >
              <span data-enrich-text>Generate Summary</span>
            </button>
          <% } else if (meeting.artifactId && meeting.hasBeenEnriched) { %>
            <button
              type="button"
              onclick="triggerEnrichment('<%= meeting.artifactId %>', this)"
              class="w-full inline-flex items-center justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
            >
              <span data-enrich-text>Re-generate Summary</span>
            </button>
          <% } else { %>
            <p class="text-xs text-gray-500">Summary will appear once the recording is processed.</p>
          <% } %>
        </div>
      </details>

      <details class="group rounded-md border border-gray-200 p-3">
        <summary class="flex cursor-pointer items-center justify-between text-sm font-semibold text-gray-900">
          Publish
          <svg class="h-4 w-4 text-gray-400 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </summary>
        <div class="mt-3 space-y-2">
          <% if (meeting.artifactId) { %>
            <button
              type="button"
              onclick="closeActionsDrawer(); openNotionDestinationPicker('<%= meeting.artifactId %>')"
              class="w-full inline-flex items-center justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-indigo-600 shadow-sm ring-1 ring-inset ring-indigo-200 hover:bg-indigo-50"
            >
              Publish to Notion
            </button>
            <button
              type="button"
              onclick="closeActionsDrawer(); openSlackDestinationPicker('<%= meeting.artifactId %>')"
              class="w-full inline-flex items-center justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-sky-600 shadow-sm ring-1 ring-inset ring-sky-200 hover:bg-sky-50"
            >
              Publish to Slack
            </button>
            <button
              type="button"
              onclick="closeActionsDrawer(); publishToNotion('<%= meeting.artifactId %>', this)"
              class="w-full inline-flex items-center justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
            >
              <span data-publish-text>Publish to All Destinations</span>
            </button>
          <% } else { %>
            <p class="text-xs text-gray-500">Publishing is available once the recording is processed.</p>
          <% } %>
        </div>
      </details>

      <details class="group rounded-md border border-gray-200 p-3">
        <summary class="flex cursor-pointer items-center justify-between text-sm font-semibold text-gray-900">
          Share
          <svg class="h-4 w-4 text-gray-400 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </summary>
        <div class="mt-3 space-y-2">
          <button
            type="button"
            onclick="scrollToShareSection(); closeActionsDrawer();"
            class="w-full inline-flex items-center justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
          >
            Open sharing panel
          </button>
        </div>
      </details>

      <details class="group rounded-md border border-gray-200 p-3">
        <summary class="flex cursor-pointer items-center justify-between text-sm font-semibold text-gray-900">
          Exports
          <svg class="h-4 w-4 text-gray-400 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </summary>
        <div class="mt-3 space-y-2">
          <% if (meeting.videoUrl || meeting.artifactId) { %>
            <% 
              const videoDownloadUrl = meeting.isShared && meeting.shareInfo?.shareToken 
                ? `/api/meetings/shared/${meeting.shareInfo.shareToken}/recording/download/video`
                : `/api/meetings/${meeting.artifactId || meeting.id}/recording/download/video`;
            %>
            <a
              href="<%= videoDownloadUrl %>"
              class="w-full inline-flex items-center justify-center rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500"
            >
              Download Video
            </a>
          <% } %>
          <% if (meeting.audioUrl || meeting.artifactId) { %>
            <% 
              const audioDownloadUrl = meeting.isShared && meeting.shareInfo?.shareToken 
                ? `/api/meetings/shared/${meeting.shareInfo.shareToken}/recording/download/audio`
                : `/api/meetings/${meeting.artifactId || meeting.id}/recording/download/audio`;
            %>
            <a
              href="<%= audioDownloadUrl %>"
              class="w-full inline-flex items-center justify-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500"
            >
              Download Audio
            </a>
          <% } %>
          <% if (meeting.summary) { %>
            <button
              type="button"
              onclick="copySummaryToClipboard()"
              class="w-full inline-flex items-center justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
            >
              Copy Summary
            </button>
          <% } %>
        </div>
      </details>

      <details class="group rounded-md border border-gray-200 p-3">
        <summary class="flex cursor-pointer items-center justify-between text-sm font-semibold text-gray-900">
          Navigation
          <svg class="h-4 w-4 text-gray-400 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </summary>
        <div class="mt-3 space-y-2">
          <a href="/meetings" class="w-full inline-flex items-center justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
            Back to Meetings
          </a>
          <a href="/" class="w-full inline-flex items-center justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
            Dashboard
          </a>
        </div>
      </details>
    </div>
  </div>
</div>
