<%
  const rawActions = Array.isArray(actions) ? actions : [];
  const groups = {};
  const groupOrder = [];

  function normalizeAction(item, index) {
    let text = "";
    let assignee = null;
    let due = null;

    if (item && typeof item === "object") {
      text =
        item.task ||
        item.action ||
        item.description ||
        item.text ||
        item.summary ||
        item.title ||
        "";
      assignee =
        item.assignee ||
        item.owner ||
        item.assignedTo ||
        item.assignee_name ||
        item.assigneeName ||
        item.owner_name ||
        item.ownerName ||
        item.user ||
        item.user_name ||
        item.userName ||
        null;
      due = item.due_date || item.deadline || item.dueDate || item.due || null;
    } else {
      text = item;
    }

    text = String(text || "").trim();
    if (!text) text = "Action item";

    if (assignee !== null && assignee !== undefined) {
      assignee = String(assignee).trim();
      if (!assignee) assignee = null;
    }

    if (due !== null && due !== undefined) {
      due = String(due).trim();
      if (!due) due = null;
    }

    let dueTs = null;
    if (due) {
      const parsed = new Date(due);
      if (!Number.isNaN(parsed.getTime())) {
        dueTs = parsed.getTime();
      }
    }

    return {
      text,
      assignee: assignee || "Unassigned",
      due,
      dueTs,
      index,
    };
  }

  rawActions.forEach((item, index) => {
    const normalized = normalizeAction(item, index);
    const key = normalized.assignee;
    if (!groups[key]) {
      groups[key] = [];
      groupOrder.push(key);
    }
    groups[key].push(normalized);
  });

  groupOrder.forEach((key) => {
    groups[key].sort((a, b) => {
      const aHasDue = a.dueTs !== null;
      const bHasDue = b.dueTs !== null;
      if (aHasDue && bHasDue) return a.dueTs - b.dueTs;
      if (aHasDue !== bHasDue) return aHasDue ? -1 : 1;
      return a.index - b.index;
    });
  });
%>

<div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4" id="action-columns-grid">
  <% groupOrder.forEach(function(groupName) { %>
    <div class="rounded-lg border border-gray-200 bg-gray-50 p-4 action-column-item">
      <div class="mb-3 flex items-center justify-between">
        <div class="flex items-center gap-2 min-w-0">
          <span class="inline-flex h-7 w-7 items-center justify-center rounded-full bg-white text-gray-500 ring-1 ring-gray-200">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </span>
          <h3 class="truncate text-sm font-semibold text-gray-900"><%= groupName %></h3>
        </div>
        <span class="inline-flex items-center rounded-full bg-white px-2 py-0.5 text-xs font-medium text-gray-600 ring-1 ring-gray-200">
          <%= groups[groupName].length %>
        </span>
      </div>
      <div class="space-y-3">
        <% groups[groupName].forEach(function(action) { %>
          <div class="rounded-lg border border-gray-200 bg-white p-3 shadow-sm">
            <div class="flex items-start gap-3">
              <p class="text-sm text-gray-900 flex-1" style="word-wrap: break-word; overflow-wrap: break-word;"><%= action.text %></p>
              <% if (action.due) { %>
                <span class="inline-flex items-center rounded-full bg-red-50 px-2 py-0.5 text-xs font-medium text-red-600 ring-1 ring-red-200 whitespace-nowrap flex-shrink-0">
                  <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <%= action.due %>
                </span>
              <% } %>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  <% }); %>
</div>
