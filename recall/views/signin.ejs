<%- include('partials/header') -%>
<style>
  .signin-container {
    min-height: 100vh;
    display: grid;
    grid-template-columns: 1fr;
    background: linear-gradient(135deg, #f5f8fa 0%, #eef2f7 100%);
  }

  @media (min-width: 1024px) {
    .signin-container {
      grid-template-columns: 1fr 1fr;
    }
  }

  .signin-hero {
    display: none;
    flex-direction: column;
    justify-content: center;
    padding: 4rem 3rem;
    background: linear-gradient(135deg, #1e3a5f 0%, #2d5a8c 100%);
    color: white;
  }

  @media (min-width: 1024px) {
    .signin-hero {
      display: flex;
    }
  }

  .hero-icon {
    font-size: 3.5rem;
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 16px;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    letter-spacing: -0.5px;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    line-height: 1.6;
    margin-bottom: 3rem;
    opacity: 0.95;
    color: rgba(255, 255, 255, 0.9);
  }

  .hero-features {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .feature-item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .feature-check {
    font-size: 1.25rem;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .feature-text {
    font-size: 0.95rem;
    opacity: 0.9;
  }

  .signin-form-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
    background: white;
  }

  @media (min-width: 640px) {
    .signin-form-container {
      padding: 3rem;
    }
  }

  @media (min-width: 1024px) {
    .signin-form-container {
      padding: 4rem;
    }
  }

  .form-wrapper {
    max-width: 420px;
    margin: 0 auto;
    width: 100%;
  }

  .brand-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 3rem;
  }

  .brand-logo-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: white;
    flex-shrink: 0;
  }

  .brand-name {
    font-size: 1.125rem;
    font-weight: 700;
    color: #1f2937;
    letter-spacing: -0.3px;
  }

  .brand-tagline {
    font-size: 0.75rem;
    color: #9ca3af;
    font-weight: 500;
    letter-spacing: 0.5px;
    text-transform: uppercase;
  }

  .signin-title {
    font-size: 1.875rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 0.5rem;
    letter-spacing: -0.3px;
  }

  .signin-subtitle {
    font-size: 0.95rem;
    color: #6b7280;
    margin-bottom: 2.5rem;
    line-height: 1.5;
  }

  .form-notice-container {
    margin-bottom: 2rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-label {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    color: #374151;
    margin-bottom: 0.625rem;
    letter-spacing: 0.3px;
  }

  .form-input {
    width: 100%;
    padding: 0.875rem 1rem;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    font-size: 0.95rem;
    color: #1f2937;
    background: #fafbfc;
    transition: all 0.2s ease;
    box-sizing: border-box;
  }

  .form-input::placeholder {
    color: #9ca3af;
  }

  .form-input:focus {
    outline: none;
    background: white;
    border-color: #3b82f6;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  .signin-button {
    width: 100%;
    padding: 1rem;
    background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
    margin-top: 0.5rem;
  }

  .signin-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
    background: linear-gradient(135deg, #2563eb 0%, #1e3a8a 100%);
  }

  .signin-button:active {
    transform: translateY(0);
  }

  .divider {
    margin: 2rem 0;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .divider-line {
    flex: 1;
    height: 1px;
    background: #e5e7eb;
  }

  .divider-text {
    font-size: 0.8rem;
    color: #9ca3af;
    font-weight: 500;
  }

  .social-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .social-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 0.875rem 1rem;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    background: white;
    font-size: 0.9rem;
    font-weight: 600;
    color: #374151;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .social-button:hover {
    border-color: #d1d5db;
    background: #f9fafb;
  }

  .signup-link-container {
    margin-top: 2.5rem;
    text-align: center;
  }

  .signup-text {
    font-size: 0.875rem;
    color: #6b7280;
  }

  .signup-link {
    color: #3b82f6;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s ease;
  }

  .signup-link:hover {
    color: #1e40af;
    text-decoration: underline;
  }

  .error-notice {
    padding: 1rem;
    background-color: #fef2f2;
    border: 1px solid #fecaca;
    border-radius: 8px;
    color: #dc2626;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    display: flex;
    gap: 0.75rem;
    align-items: flex-start;
  }

  .error-icon {
    font-size: 1.25rem;
    flex-shrink: 0;
    margin-top: -2px;
  }
</style>

