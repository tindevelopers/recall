<%- include('partials/header') -%>
<div class="min-h-full bg-gradient-to-br from-slate-50 via-white to-indigo-50">
  <%- include('partials/navigation', { user: user, currentPage: 'settings' }) -%>
  <%- include('partials/notice', { notice: notice }) -%>
  
  <div class="py-10">
    <header class="mb-8">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="md:flex md:items-center md:justify-between">
          <div class="min-w-0 flex-1">
            <h1 class="text-3xl font-bold tracking-tight text-gray-900 flex items-center">
              <svg class="w-8 h-8 mr-3 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              Settings
            </h1>
            <p class="mt-2 text-sm text-gray-600">
              Configure your meeting assistant, recording preferences, and integrations.
            </p>
          </div>
        </div>
      </div>
    </header>

    <main>
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <% if (!calendars || calendars.length === 0) { %>
          <!-- No calendars state -->
          <div class="text-center py-12 bg-white rounded-2xl shadow-sm border border-gray-100">
            <svg class="mx-auto h-16 w-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <h3 class="mt-4 text-lg font-semibold text-gray-900">No Calendar Connected</h3>
            <p class="mt-2 text-sm text-gray-500 max-w-md mx-auto">
              Connect your Google Calendar or Microsoft Outlook to get started with automated meeting recordings and transcriptions.
            </p>
            <div class="mt-6">
              <a href="/" class="inline-flex items-center rounded-lg bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Connect Calendar
              </a>
            </div>
          </div>
        <% } else { %>
          
          <!-- Calendar Selector (if multiple calendars) -->
          <% if (calendars.length > 1) { %>
          <div class="mb-6">
            <label for="calendar-select" class="block text-sm font-medium text-gray-700 mb-2">Select Calendar</label>
            <select 
              id="calendar-select" 
              onchange="window.location.href='/settings?calendarId=' + this.value"
              class="block w-full max-w-md rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
            >
              <% calendars.forEach(function(cal) { %>
                <option value="<%= cal.id %>" <%= cal.id === calendar.id ? 'selected' : '' %>>
                  <%= cal.email %> (<%= cal.platform === 'google_calendar' ? 'Google' : 'Outlook' %>)
                </option>
              <% }); %>
            </select>
          </div>
          <% } %>

          <!-- Tabbed Interface -->
          <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
            <!-- Tab Navigation -->
            <div class="border-b border-gray-200">
              <nav class="-mb-px flex space-x-1 px-4 overflow-x-auto" aria-label="Tabs">
                <button 
                  onclick="switchTab('overview')"
                  id="tab-overview"
                  class="tab-button group inline-flex items-center py-4 px-4 border-b-2 font-medium text-sm transition-colors border-indigo-500 text-indigo-600"
                  data-tab="overview"
                >
                  <svg class="w-5 h-5 mr-2 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                  </svg>
                  Overview
                </button>
                <button 
                  onclick="switchTab('user')"
                  id="tab-user"
                  class="tab-button group inline-flex items-center py-4 px-4 border-b-2 font-medium text-sm transition-colors border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
                  data-tab="user"
                >
                  <svg class="w-5 h-5 mr-2 text-gray-400 group-hover:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  User
                </button>
                <button 
                  onclick="switchTab('recording')"
                  id="tab-recording"
                  class="tab-button group inline-flex items-center py-4 px-4 border-b-2 font-medium text-sm transition-colors border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
                  data-tab="recording"
                >
                  <svg class="w-5 h-5 mr-2 text-gray-400 group-hover:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                  </svg>
                  Recording
                </button>
                <button 
                  onclick="switchTab('bot')"
                  id="tab-bot"
                  class="tab-button group inline-flex items-center py-4 px-4 border-b-2 font-medium text-sm transition-colors border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
                  data-tab="bot"
                >
                  <svg class="w-5 h-5 mr-2 text-gray-400 group-hover:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  Bot Settings
                </button>
                <button 
                  onclick="switchTab('webhooks')"
                  id="tab-webhooks"
                  class="tab-button group inline-flex items-center py-4 px-4 border-b-2 font-medium text-sm transition-colors border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
                  data-tab="webhooks"
                >
                  <svg class="w-5 h-5 mr-2 text-gray-400 group-hover:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                  </svg>
                  Webhooks
                  <% if (webhookCount && webhookCount > 0) { %>
                    <span class="ml-2 inline-flex items-center rounded-full bg-indigo-100 px-2 py-0.5 text-xs font-medium text-indigo-700">
                      <%= webhookCount %>
                    </span>
                  <% } %>
                </button>
                <button 
                  onclick="switchTab('publishing')"
                  id="tab-publishing"
                  class="tab-button group inline-flex items-center py-4 px-4 border-b-2 font-medium text-sm transition-colors border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
                  data-tab="publishing"
                >
                  <svg class="w-5 h-5 mr-2 text-gray-400 group-hover:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h10M7 16h6"></path>
                  </svg>
                  Publishing
                </button>
                <button 
                  onclick="switchTab('integrations')"
                  id="tab-integrations"
                  class="tab-button group inline-flex items-center py-4 px-4 border-b-2 font-medium text-sm transition-colors border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
                  data-tab="integrations"
                >
                  <svg class="w-5 h-5 mr-2 text-gray-400 group-hover:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"></path>
                  </svg>
                  Integrations
                </button>
              </nav>
            </div>

            <!-- Tab Content -->
            <div class="p-6">
              <!-- Overview Tab -->
              <div id="content-overview" class="tab-content">
                <%- include('partials/settings-tab-overview', { calendar: calendar }) -%>
              </div>

              <!-- User Tab -->
              <div id="content-user" class="tab-content hidden">
                <%- include('partials/settings-tab-user', { user: user, calendars: calendars, notionDestination: notionDestination }) -%>
              </div>

              <!-- Recording Tab -->
              <div id="content-recording" class="tab-content hidden">
                <%- include('partials/settings-tab-recording', { calendar: calendar }) -%>
              </div>

              <!-- Bot Settings Tab -->
              <div id="content-bot" class="tab-content hidden">
                <%- include('partials/settings-tab-bot', { calendar: calendar }) -%>
              </div>

              <!-- Webhooks Tab -->
              <div id="content-webhooks" class="tab-content hidden">
                <%- include('partials/settings-tab-webhooks', { calendar: calendar, webhookCount: webhookCount }) -%>
              </div>

              <!-- Publishing Tab -->
              <div id="content-publishing" class="tab-content hidden">
                <%- include('partials/settings-tab-publishing', { notionDestination, slackTarget, teamworkTarget }) -%>
              </div>

              <!-- Integrations Tab -->
              <div id="content-integrations" class="tab-content hidden">
                <%- include('partials/settings-tab-integrations', { notion, calendars, connectUrls }) -%>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </main>
  </div>
</div>

<script>
function switchTab(tabName) {
  // Check if tabs exist (only when calendar is connected)
  const tabContent = document.getElementById('content-' + tabName);
  const activeTab = document.getElementById('tab-' + tabName);
  
  if (!tabContent || !activeTab) {
    return; // Tabs don't exist, likely no calendar connected
  }
  
  // Hide all content
  document.querySelectorAll('.tab-content').forEach(el => el.classList.add('hidden'));
  
  // Reset all tab buttons
  document.querySelectorAll('.tab-button').forEach(el => {
    el.classList.remove('border-indigo-500', 'text-indigo-600');
    el.classList.add('border-transparent', 'text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300');
    const svg = el.querySelector('svg');
    if (svg) {
      svg.classList.remove('text-indigo-500');
      svg.classList.add('text-gray-400', 'group-hover:text-gray-500');
    }
  });
  
  // Show selected content
  tabContent.classList.remove('hidden');
  
  // Activate selected tab
  activeTab.classList.remove('border-transparent', 'text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300');
  activeTab.classList.add('border-indigo-500', 'text-indigo-600');
  const svg = activeTab.querySelector('svg');
  if (svg) {
    svg.classList.remove('text-gray-400', 'group-hover:text-gray-500');
    svg.classList.add('text-indigo-500');
  }
  
  // Update URL hash
  history.replaceState(null, null, '#' + tabName);
}

// Handle initial tab from URL hash
document.addEventListener('DOMContentLoaded', function() {
  const hash = window.location.hash.slice(1);
  if (hash && document.getElementById('tab-' + hash)) {
    switchTab(hash);
  }
});
</script>

<%- include('partials/footer') -%>
